package market;

public class Trader {
	private int money;
	private int apples;
	
	Trader()
	{
		
	}
	Trader(int money, int apples){
		this.money = money;
		this.apples = apples;
	}
	
	public void buy(int amount,int price) {
		money -= amount*price;
		apples += amount;
	}
	public void sell(int amount,int price) {

		money += amount*price;
		apples -= amount;
	}
}
