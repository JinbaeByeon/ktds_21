package market;

/**
 * 판매자
 * 
 * @author User
 *
 */
public class Seller extends Trader {
	/**
	 * 판매
	 * (buyer에게 amount만큼 판매)
	 * @param buyer 구매자
	 * @param amount 주문개수
	 */
	public int sell(Buyer buyer, int amount) {
		int res = buyer.pay(this,amount);
		
		if(stock < amount || res==0) {
			return 0;
		}
		stock-=amount;
		return amount;		
	}
	
	public void show() {
		System.out.print("[구매자]");
		super.show();
	}
}
