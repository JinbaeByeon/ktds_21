package market;

/**
 * 판매자
 * 
 * @author User
 *
 */
public class Seller extends Trader {
	/**
	 * 판매
	 * (buyer에게 amount만큼 판매)
	 * @param amount 주문개수
	 */
	public int sell(int amount) {
		
		if(stock < amount) {
			System.out.println("판매자의 재고가 부족함");
			return 0;
		}
		stock-=amount;
		money += amount*Market.PRICE_OF_APPLE;
		return amount;		
	}
	public void addMoney(int money) {
		this.money += money;
	}
	public void show() {
		System.out.print("[판매자] ");
		super.show();
	}
}
