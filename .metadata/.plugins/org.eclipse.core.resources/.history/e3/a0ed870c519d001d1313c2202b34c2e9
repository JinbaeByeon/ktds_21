package gas_station;

public class Fuel {
	public static final int GASOLINE =1;
	public static final int DIESEL =2;
	public static final int LPG =3;
	
	private int type;
	private int remain;
	
	public int getType() {
		return type;
	}
	public void setType(int sort) {
		this.type = sort;
	}
	public int getRemain() {
		return remain;
	}
	public void setRemain(int remain) {
		this.remain = remain;
	}
	public void subtract(int amount) {
		remain -= amount;
	}
	Fuel(int sort,int remain){
		this.type = sort;
		this.remain = remain;
	}
	Fuel(int sort){
		this.type = sort;
	}
	Fuel(){
		
	}

	@Override
	public String toString() {
		String[] oilName = {"휘발유","경유","LPG"};
		return "기름 종류: " + oilName[type] + "잔량: " + remain;
	}
}
