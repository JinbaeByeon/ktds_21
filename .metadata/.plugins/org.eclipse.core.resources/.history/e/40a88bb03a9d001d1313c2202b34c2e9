package market;

public class Market {
	public static final int price;
	private Buyer buyer = new Buyer();
	private Seller seller = new Seller();

	public void proceed() {
		int amount=0;
		buyer.buy(seller, amount);
		seller.sell(buyer, amount);
	}

	public void show() {
		buyer.show();
		seller.show();
	}
}
